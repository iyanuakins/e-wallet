generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Wallet {
  id        Int       @id @default(autoincrement())
  walletId  String    @db.VarChar(15) @unique
  balance   String    @db.VarChar(10) @default(0)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

enum TransactionType {
  CREDIT
  DEBIT
}

model Transaction {
  id                Int               @id @default(autoincrement())
  walletId          String            @db.VarChar(15)
  reference         String            @db.VarChar(64)
  amount            String            @db.VarChar(10) @default(0)
  balanceBefore     String            @db.VarChar(10) @default(0)
  balanceAfter      String            @db.VarChar(10) @default(0)
  type              TransactionType   @default(DEBIT)
  createdAt         DateTime          @default(now())
}
